<?xml version="1.0" encoding="UTF-8"?>

<!-- Beans to add to the current Application context definition -->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  		    http://www.springframework.org/schema/context
  		    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="org.openmrs.module.smsreminder"/>

    <!-- Wraps SmsreminderService methods in DB transactions and OpenMRS interceptors,
    which set audit info like dateCreated, changedBy, etc.-->
    <bean id="smsreminder.PatientDao" class="org.openmrs.module.smsreminder.api.dao.PatientDao">
        <property name="sessionFactory">
            <ref bean="dbSessionFactory"/>
        </property>
    </bean>
    <bean id="smsreminder.SmsreminderService"
          class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager"/>
        </property>
        <property name="target">
            <bean class="org.openmrs.module.smsreminder.api.impl.SmsreminderServiceImpl">
                <property name="dao" ref="smsreminder.SmsreminderDao"/>
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors"/>
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource"/>
        </property>
    </bean>

    <!-- Adds SmsreminderService to OpenMRS context so it can be accessed
    calling Context.getService(SmsreminderService.class) -->
    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.smsreminder.api.SmsreminderService</value>
                <ref bean="smsreminder.SmsreminderService"/>
            </list>
        </property>
    </bean>
</beans>
